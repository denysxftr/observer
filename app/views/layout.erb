<html>
  <head>
    <title>Observer</title>

    <%= assets_tags %>
  </head>
  <body>
    <header>
      <a href="/"><h1>Observer</h1></a>
      <% if current_user %>
        <div class="user-panel">
          <% if current_user.admin? %>
            <a class="button" href="/users">Users</a>
          <% end %>
          <a href="/user/<%= current_user.id %>"><%= current_user.email %></a>
          <a class="button" href="/sign_out">Sign out</a>
        </div>
      <% end %>
    </header>
    <div class="wrapper">
      <div class="alert"><%= alert %></div>
      <div class="notice"><%= notice %></div>
      <%= yield %>
    </div>
  </body>
</html>
