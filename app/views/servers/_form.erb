<h2><%= @server.new_record? ? 'New server' : 'Edit server' %></h2>
<form method="post" action="<%= @server.new_record? ? "/project/#{params[:project_id]}/server/new" : "/server/#{@server.id}" %>" data-parsley-validate="true">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @server.name %>">
  <br>
  <input type="submit">
</form>

<% if !@server.new_record? %>
  <form method="post" action="<%= "/servers/#{@server.id}/delete" %>">
    <input type="submit" value="Delete">
  </form>
<% end %>
