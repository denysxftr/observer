<div class="ping-show">
  <div class="headline">
    <span class="type"><%= @ping.is_ping ? 'PING' : "HTTP #{@ping.http_method}" %></span>
    <span class="url"><%= @ping.url %></span>
  </div>

  <form method="post" action="<%= "/ping/#{@ping.id}/delete" %>">
    <input type="submit" value="Delete">
  </form>
  <div id="chart"></div>
</div>
<script type="text/javascript">
columns = [
  ['time', <%= @ping.timeouts_log.keys.map { |x| "'#{x.strftime('%Y-%m-%d %H:%M:%S')}'" }.join(', ') %>],
  ['response time', <%= @ping.timeouts_log.values.join(',') %>]
];
</script>
