<form method="post" action="<%= @check.persisted? ? "/check/#{@check.id}" : "/project/#{params[:project_id]}/check/new" %>" data-parsley-validate>
  <label>Name:</label>
  <input type="text" name="name" value="<%= @check.name %>">
  <br>
  <label>URL:</label>
  <input type="text" name="url" value="<%= @check.url %>" data-parsley-required="true" data-parsley-type="url">
  <br>
  <input type="submit">
</form>
