<div class="check-show">
  <div class="headline">
    <% if @check.project %>
      <a href="/project/<%= @check.project.id %>">[<%= @check.project.name %>]</a>
    <% end %>
    <h2><%= @check.name %></h2>
    <span class="url"><%= @check.url %></span>
    <a class="button right" href="/check/<%= @check.id %>/edit">Edit</a>
  </div>
  <div id="responses_chart" data-id=<%= @check.id %>></div>
  <% unless @check.is_ok %>
    <br>
    <h4>Current issues:</h4>
    <% @check.results.order(:created_at.desc).first.issues.values.each do |issue| %>
      <p><%= issue %></p>
    <% end %>
  <% end %>
</div>
